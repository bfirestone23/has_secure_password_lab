<h1>Login</h1>

<%= form_with model: @user, url: '/login', method: 'post' do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit "Log In" %>
<% end %>
